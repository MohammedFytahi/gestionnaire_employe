<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.gestionaire_employe.model.Employe" table="employe">

        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>


        <property name="nom" column="nom" type="string" not-null="true"/>
        <property name="email" column="email" type="string" not-null="true"/>
        <property name="telephone" column="telephone" type="string"/>
        <property name="departement" column="departement" type="string"/>
        <property name="poste" column="poste" type="string"/>
    </class>
</hibernate-mapping>
